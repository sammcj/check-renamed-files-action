{
  "name": "check-renamed-files",
  "version": "1.2.0",
  "description": "Github Action to check if any files have been renamed between two git refs in a given path",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "check-prettier": "npm run prettier --fix",
    "eslint": "eslint --ignore-path .gitignore --max-warnings 0 \"./**/*.{js,ts}\"",
    "format-prettier": "npm run prettier --write",
    "prettier": "prettier --ignore-path .gitignore \"./**/*.{js,json,md,ts,yml}\"",
    "build": "npx @vercel/ncc build index.js --v8-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammcj/flyway-changes-action.git"
  },
  "keywords": [],
  "author": "Sam McLeod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sammcj/flyway-changes-action/issues"
  },
  "homepage": "https://github.com/sammcj/flyway-changes-action#readme",
  "devDependencies": {
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "prettier": "2.8.1"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@vercel/ncc": "0.36.0",
    "chalk": "5.2.0",
    "simple-git": "3.15.1"
  }
}
